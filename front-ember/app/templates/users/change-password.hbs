<h3>{{t 'auth.users.change_your_password'}}</h3>
<hr/>
<form {{action "changePassword" on="submit"}}>  
  <div class="form-group">
    <label>{{t 'auth.attributes.user.password'}}</label>
    {{input type="password" value=password class="form-control"}}
  </div>
  <div class="form-group">
    <label>{{t 'auth.attributes.user.re_password'}}</label>
    {{input type="password" value=re_password class="form-control"}}
  </div>
  <button type="submit" class="btn btn-primary">{{t 'buttons.submit'}}</button>
</form>
