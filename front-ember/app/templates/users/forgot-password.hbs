<h3>{{t 'auth.users.forgot_your_password'}}</h3>
<hr/>
<form {{action "forgotPassword" on="submit"}}>
  <div class="form-group">
    <label>{{t 'auth.attributes.user.email'}}</label>
    {{input type="email" value=email class="form-control"}}
  </div>
  <button type="submit" class="btn btn-primary">{{t 'auth.users.send_me_reset_password_instructions'}}</button>
</form>
