<h3>{{t 'auth.users.sign_up'}}</h3>
<hr/>
<form {{action "signUp" on="submit"}}>
  <div class="form-group">
    <label>{{t 'auth.attributes.user.name'}}</label>
    {{input type="text" value=name class="form-control"}}
  </div>
  <div class="form-group">
    <label>{{t 'auth.attributes.user.email'}}</label>
    {{input type="email" value=email class="form-control"}}
  </div>
  <div class="form-group">
    <label>{{t 'auth.attributes.user.password'}}</label>
    {{input type="password" value=password class="form-control"}}
  </div>
  <div class="form-group">
    <label>{{t 'auth.attributes.user.re_password'}}</label>
    {{input type="password" value=re_password class="form-control"}}
  </div>
  <button type="submit" class="btn btn-primary">{{t 'buttons.submit'}}</button>
</form>
